<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/catergoreisMainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:gravity="center_vertical|center_horizontal|top"
    android:padding="@dimen/_2sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/catergoreisImageView"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        app:civ_border_color="@color/background_gray"
        app:civ_border_width="@dimen/_1sdp" />

    <TextView
        android:id="@+id/catergoriesTitleTextView"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catergoreisImageView"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center"
        android:text="TOP" />
</RelativeLayout>