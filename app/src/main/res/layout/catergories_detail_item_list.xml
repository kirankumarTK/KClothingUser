<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_190sdp"
    android:layout_margin="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top|start"
        android:orientation="vertical"
        android:weightSum="3">

        <ImageView
            android:id="@+id/catergoreisProductsImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.3"
            android:src="@drawable/jackets" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">


            <TextView
                android:id="@+id/catergoreisProductsDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:ems="5"
                android:lineSpacingMultiplier="0.8"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="#534e4e"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/catergoreisProductsPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:maxLines="1"
                android:text=""
                android:textColor="#000"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/wishlist" />

    </RelativeLayout>

</android.support.v7.widget.CardView>