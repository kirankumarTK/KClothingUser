<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_1sdp"
    android:layout_marginStart="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="@dimen/_152sdp"
        android:layout_height="wrap_content"
        android:gravity="center|top|start"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ProductsImageView"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_170sdp"
            android:src="@drawable/jackets" />

        <TextView
            android:id="@+id/ProductsDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:ems="1"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/ProductsPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_2sdp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
</android.support.v7.widget.CardView>