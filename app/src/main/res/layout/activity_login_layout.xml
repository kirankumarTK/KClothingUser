<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.im028.kclothinguser.activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            style="@style/textinputtext"
            android:layout_marginTop="@dimen/_5sdp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/userNameEditextLogin"
                style="@style/editTextStyle"
                android:hint="User Name"
                android:singleLine="true"
                android:text="rahulE@gmail.com" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/textinputtext"
            android:layout_marginTop="@dimen/_5sdp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/passwordEditextLogin"
                style="@style/editTextStyle"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:text="12345678-" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center">

            <Button
                android:id="@+id/loginButtonLogin"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/colorAccent"
                android:text="LOGIN"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/forgotPasswordTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Forgot password ?"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/newUserTextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="New User ?"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarLogin"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>
